<p id="notice"><%= notice %></p>

<h1>Stations</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Vacancies</th>
      <th scope="col">Vacancies Free</th>
      <th scope="col">Vacancies Occupied</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.vacancies_bike %></td>
        <td><%= station.vacancies_free_count %></td>
        <td><%= station.vacancies_occupied_count %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

