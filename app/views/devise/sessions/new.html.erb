<div class="text-center">

  <form class="form-signin">

    <img class="mb-4" src="/assets/bike.jpg" width="300" height="150">
    <h6> Bike like you </h6>
    <h2 class="mb-3 font-weight-normal">Please sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control inputEmail", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control inputPassword", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </form>  
</div>
