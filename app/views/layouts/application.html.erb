<!DOCTYPE html>
<html>
  <head>
    <title>BikeLikeYou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
   <div class="container">
    <div class="navbar">
      <% unless !current_user %> 
        <%= current_user[:name] %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% end %>
    </div>
    <div>
      <%= yield %>
    <div>
  </div>

  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v4.0&appId=2343927349048993&autoLogAppEvents=1"></script>
  </body>
</html>
